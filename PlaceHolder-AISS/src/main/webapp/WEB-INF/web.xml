<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>aiss.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloWorld</servlet-name>
    <url-pattern>/helloworld</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
  	<exception-type>java.lang.ArrayIndexOutOfBoundsException</exception-type>
  	<location>/error.html</location>
  </error-page>

<servlet>
    <description></description>
    <display-name>GithubAuthController</display-name>
    <servlet-name>GithubAuthController</servlet-name>
    <servlet-class>aiss.controller.oauth.GenericAuthController</servlet-class>
    <init-param>
    	<param-name>provider</param-name>
    	<param-value>Github</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>GithubAuthController</servlet-name>
    <url-pattern>/AuthController/Github</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GithubOAuth2Callback</display-name>
    <servlet-name>GithubOAuth2Callback</servlet-name>
    <servlet-class>aiss.controller.oauth.OAuth2Callback</servlet-class>
    <init-param>
    	<param-name>provider</param-name>
    	<param-value>Github</param-value>
    </init-param>
    <init-param>
    	<param-name>onSuccess</param-name>
    	<param-value>close</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>GithubOAuth2Callback</servlet-name>
    <url-pattern>/oauth2callback/Github</url-pattern>
  </servlet-mapping>    
  </web-app>